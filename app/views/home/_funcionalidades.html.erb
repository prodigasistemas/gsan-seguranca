<% unless submenu.nil? %>
  <% submenu.each do |funcionalidade| %>
    <% if funcionalidade[:submenu].present? %>
      <li>
        <a class="funcionalidade-pai" href="">
          <%= funcionalidade[:descricao] %> 
          <span><i class="fa fa-caret-right" aria-hidden="true"></i></span>
        </a> 
        
        <%= render partial: "funcionalidade", locals: { funcionalidade: funcionalidade } %>
      </li>
    <% else %>
      <li><a href="<%= funcionalidade[:url] %>"> <%= funcionalidade[:descricao] %></a></li>
    <% end -%>
  <% end -%>
<% end -%>